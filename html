  <!-- Scripts -->
  <script>
    const enterButton = document.getElementById('enter-button');
    const introScreen = document.getElementById('intro-screen');
    const toolSuite = document.getElementById('tool-suite');

    enterButton.addEventListener('click', () => {
      introScreen.style.display = 'none';
      toolSuite.classList.remove('hidden');
    });

    // 3D Graphics (rotating cube)
    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(75, 1, 0.1, 1000);
    const renderer = new THREE.WebGLRenderer({ canvas: document.getElementById('heroCanvas'), alpha: true });
    renderer.setSize(300, 300);
    const geometry = new THREE.BoxGeometry();
    const material = new THREE.MeshStandardMaterial({ color: 0x6366f1 });
    const cube = new THREE.Mesh(geometry, material);
    scene.add(cube);
    const light = new THREE.PointLight(0xffffff, 1, 100);
    light.position.set(10, 10, 10);
    scene.add(light);
    camera.position.z = 3;

    function animate() {
      requestAnimationFrame(animate);
      cube.rotation.x += 0.01;
      cube.rotation.y += 0.01;
      renderer.render(scene, camera);
    }
    animate();
  </script>
